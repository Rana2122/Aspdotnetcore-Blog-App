@model IEnumerable<BloggingApplicationUI.Models.Post>



    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-lg border-0 rounded-lg">
                    <div class="card-header" style="background: linear-gradient(to right, #1d2671, #c33764); color: #fff;">
                        <h5 class="font-weight-bold mb-0 text-center">@post.Title</h5>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <p class="card-text text-muted">
                            @if (!string.IsNullOrEmpty(post.Content) && post.Content.Length > 100)
                            {
                                @post.Content.Substring(0, 100)
                                    }
                            else
                            {
                                @post.Content
                            }
                        </p>

                       
                        <div class="mt-auto">
                            <small class="text-secondary d-block mb-3">
                                Published on: @post.CreatedAt.ToString("MMM dd, yyyy | hh:mm tt")
                            </small>

                            <a href="@Url.Action("Details", "Post", new { id = post.Id })" class="btn btn-primary btn-sm btn-block shadow-sm mb-2">
                                <i class="fas fa-eye"></i> Read More
                            </a>
                            <a href="@Url.Action("Edit", "Post", new { id = post.Id })" class="btn btn-warning btn-sm btn-block shadow-sm mb-2">
                                <i class="fas fa-edit"></i> Edit Post
                            </a>
                            <a href="@Url.Action("Delete", "Post", new { id = post.Id })" class="btn btn-danger btn-sm btn-block shadow-sm mb-2">
                                <i class="fas fa-trash"></i> Delete Post
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
