@model BloggingApplicationUI.Models.Post

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="text-dark font-weight-bold">@Model.Title</h2>
        <p class="text-muted font-italic">Posted on: @Model.CreatedAt.ToString("MMM dd, yyyy")</p>
    </div>

    <div class="card shadow-sm border-0 rounded-lg">
        <div class="card-body">
            <p class="card-text text-muted">@Model.Content</p>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Post")" class="btn btn-outline-primary btn-lg shadow-lg px-4 py-2 rounded-pill">
            <i class="fas fa-arrow-left mr-2"></i> Back to List
        </a>
    </div>
</div>

