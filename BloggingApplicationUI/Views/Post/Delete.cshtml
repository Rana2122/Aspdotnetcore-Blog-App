@model BloggingApplicationUI.Models.Post

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="text-danger font-weight-bold">Delete Post</h1>
        <h3 class="text-muted">Please confirm if you want to delete the following post.</h3>
    </div>

    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-body">
            <h4 class="card-title text-dark font-weight-semibold">@Model.Title</h4>
            <p class="card-text text-muted">@Model.Content</p>
        </div>

        <div class="text-center mt-4">
            <button type="button" class="btn btn-danger btn-lg px-5 py-3 shadow-lg rounded-pill" data-bs-toggle="modal" data-bs-target="#deleteModal">
                <i class="fas fa-trash-alt mr-2"></i> Delete Post
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 py-3 shadow-lg rounded-pill ml-3">
                <i class="fas fa-times-circle mr-2"></i> Cancel
            </a>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the post titled "<strong>@Model.Title</strong>"?</p>
                <p>This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
                    <button type="submit" class="btn btn-danger">Yes, Delete Post</button>
                </form>
            </div>
        </div>
    </div>
</div>

